<Window x:Class="CaveTube.CaveTalk.View.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CaveTalkのバージョン情報" Height="120" Width="300" ShowInTaskbar="False" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>製品名：</Label>
            <TextBlock Text="CaveTalk" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>バージョン：</Label>
            <TextBlock Text="{Binding Path=Version, StringFormat=yyyy.MM.dd}" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>著作権情報：</Label>
            <TextBlock Text="Copyright © まどがい" VerticalAlignment="Center" />
        </StackPanel>
    </StackPanel>
</Window>
